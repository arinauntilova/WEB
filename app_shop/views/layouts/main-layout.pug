<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        link(rel="stylesheet", href="/css/main.css")
        block styles
    body
        .backdrop
        header.main-header
            //- button#side-menu-toggle Menu
            img(src='/images/logo.png' alt='' style='width:40px; height:40px;')
            nav.main-header__nav
                //- маркированный список
                ul.main-header__item-list
                    //- li.main-header__item  
                    //-     img(src='/images/logo.png' alt='' style='width:40px; height:40px;')
                   
                    li.main-header__item
                        //- a() - атрибут элементу разметки
                        a(href="/", class=(path === "/" ? "active" : "")) Магазин
                    li.main-header__item
                        a(href="/products", class=(path === "/products" ? "active" : "")) Каталог
                    
                        li.main-header__item
                            a(href="/cart", class=(path === "/cart" ? "active" : "")) Корзина
                        li.main-header__item
                            a(href="/orders", class=(path === "/orders" ? "active" : "")) Заказы

                    if isAdmin
                        li.main-header__item
                            a(href="/admin/add-product", class=(path === "/admin/add-product" ? "active" : "")) Добавить товар
                        li.main-header__item
                            a(href="/admin/products", class=(path === "/admin/products" ? "active" : "")) Товары администратора                  
                        li.main-header__item
                            a(href="/admin/registration", class=(path === "/admin/registration" ? "active" : "")) Регистрация сотрудников

                    else if isAnalyst
                        li.main-header__item
                            a(href="/admin/analytics", class=(path === "/admin/analytics" ? "active" : "")) Аналитика
                            
                ul.main-header__item-list
                    if !isAuthenticated
                        li.main-header__item
                            a(href="/signin", class=(path === "/signin" ? "active" : "")) Войти
                        li.main-header__item
                            a(href="/signup", class=(path === "/signup" ? "active" : "")) Зарегистрироваться
                    else
                        li.main-header__item
                            form(action="/signout", method="post")
                                input(type="hidden", name="_csrf", value=csrfToken)
                                button(type="submit") Выйти
            
